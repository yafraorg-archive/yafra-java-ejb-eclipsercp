<?xml version="1.0" encoding="utf-8"?>
<domain project-version="6">
	<map name="org.yafra.yafraMap"/>

	<node name="org.yafra.dbNode"
		 factory="org.apache.cayenne.configuration.server.XMLPoolingDataSourceFactory"
		 schema-update-strategy="org.apache.cayenne.access.dbsync.CreateIfNoSchemaStrategy"
		>
		<map-ref name="org.yafra.yafraMap"/>
		<data-source>
			<driver value="org.apache.derby.jdbc.ClientDriver"/>
			<url value="jdbc:derby://localhost:1527/yafra;user=yafra;create=true"/>
			<connectionPool min="1" max="1"/>
			<login userName="yafraadmin"/>
		</data-source>
	</node>
</domain>
